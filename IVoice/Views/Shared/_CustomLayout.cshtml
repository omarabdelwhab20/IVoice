<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - IVoice</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.css"
          integrity="sha512-Cb0WDP6lVyVaQJulFMEOBGpkgqU6UAOEBpthbb9BfdhmUXnmYQwobuCm6Xp2YYL6Pd/l0ZA5Up/ijp0fu+nFpQ=="
          crossorigin="anonymous" />

    <link rel="stylesheet" href="~/css/products.css">
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <!-- font awesome style -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="~/css/style.css" />
    <!-- responsive style -->
    <link rel="stylesheet" href="~/css/responsive.css" />

    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
</head>
<body>
    <div class="herro_area">
        <!-- header section strats -->
    <header class="header">
        <div class="container-two">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span>
                        IVOICE
                    </span>
                </a>
                  @if(User.Identity.IsAuthenticated==true)
                    {
                        
                       <ul class="navbar-nav  ">
                         <li class="nav-item active">
                             <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>

                         </li>
                          <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Products <span class="sr-only">(current)</span></a>

                          </li>
                            @if (User.IsInRole("Admin"))
                            {

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Products">Add Product<span class="sr-only">(current)</span></a>
                            </li>

                            }
                         </ul>
                        
                    }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav  ">
                        
      
                    </ul>
                    <div class="quote_btn-container">
                        <ul class="navbar-nav  ">
                            @if (User.Identity.IsAuthenticated == false)
                            {
                                <li class="nav-item">
                                    <a asp-controller="Account" asp-action="Login" class="quote_btn">
                                        Login
                                    </a>
                                </li>

                                <!-- Add space between buttons -->
                                <span style="margin-right: 10px;"></span>
                                <li class="nav-item">
                                    <a asp-controller="Account" asp-action="Register" class="quote_btn">
                                        Register
                                    </a>
                                    </li>
                                }
                                else
                                {
                                    @if (User.IsInRole("User"))
                                    {
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/Cart/GetUserCart">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                                                </svg>
                                            </a>
                                        </li>
                                    }
                                    <span style="margin-right: 10px;"></span>
                                <li class="nav-item">
                                    <a class="quote_btn" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                                <span style="margin-right: 10px;"></span>
                                    @if (User.IsInRole("User"))
                                    {
                                        <li class="nav-item">
                                            <a class="quote_btn" asp-controller="UserOrder" asp-action="UserOrders">welcome @User.Identity.Name</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="quote_btn" href="#">welcome @User.Identity.Name</a>
                                        </li>
                                    }
                            }
                            
                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>

        <!-- end header section -->
        <div>
                @RenderBody()
        </div>

    </div>
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href="https://html.design/">Free Html Templates</a>
            </p>
        </div>
    </footer>
    <!-- footer section -->
    <!-- jQery -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script>
        loadCartCount();
        async function loadCartCount() {
            try {
                var response = await fetch(`/Cart/GetTotalItemInCart`);
                console.log(response)
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;

                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify");
</body>
</html>


